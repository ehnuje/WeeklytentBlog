
<div class="text-center">
  <div class="clearfix">
    <h2 ><%= @member.name %></h2>
  </div>

  <div class="row">
    <div id= "member-intro" class="col-lg-12">
      <%= @member.introduction %>
    </div>
    <div id= "member-intro" class="col-lg-12">
      <%= @member.email %>
    </div>
    <div id= "member-profile" class="col-lg-12">
      <%= image_tag @member.image_url, :class => "img-responsive aligncenter img-rounded" %>
    </div>
  </div>


  <div>
    <%= link_to members_path do %>
      <button type="button" class="btn btn-default ">
