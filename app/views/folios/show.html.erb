
<div class="text-center">
  <div class="clearfix">
    <h2 ><%= @folio.title %></h2>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= image_tag @folio.figure.url(:medium), :class => "img-responsive aligncenter img-rounded" %>
      <div id= "folio-content" class="col-lg-12">
        <div class="blog-content aligncenter">
          <%= raw @folio.description %>
        </div>
      </div>
    </div>
  </div>


  <div>
    <%= link_to folios_path do %>
      <button type="button" class="btn btn-default ">
        Back
      </button>
    <% end %>
  </div>
</div>