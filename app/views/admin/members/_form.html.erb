<div class="form-group has-feedback <%= validation_state(@member, :profile_img) %>">
  <%= f.label :profile_img, "Thumbnail image", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">

    <%= f.file_field :profile_img , autofocus: true, class: "form-control"  %>

    <span class="glyphicon <%= validation_state_feedback(@member, :profile_img) %> form-control-feedback"></span>
    <span class="help-block"><%= attribute_error_message(@member, :profile_img) %></span>
  </div>
  <%= image_tag @member.profile_img.url(:thumb) %>
</div>
