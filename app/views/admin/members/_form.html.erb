<div class="form-group has-feedback <%= validation_state(@member, :name) %>">
  <%= f.label :name, "Name", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
    <span class="glyphicon <%= validation_state_feedback(@member, :name) %> form-control-feedback"></span>
    <span class="help-block"><%= attribute_error_message(@member, :name) %></span>
  </div>
</div>

